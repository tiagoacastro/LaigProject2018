<yas>
    <scene root="root" axis_length="5"/>
    
    <views default="view">
        <perspective id="unique_perspective" near="0" far="10" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="unique_ortho" near="1" far="1" left="1" right="1" top="1" bottom="1"/>
    </views>

    <ambient>
        <ambient r="1" g="1" b="1" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="unique_light" enabled="1" >
            <location x="5" y="5" z="5" w="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
    </lights>

    <textures>
        <texture id="rocks" file="rocks.jpg" />
    </textures>

    <materials>
        <material id="red" shininess = "1" >
            <emission r="128" g="0" b="0" a="1" />
            <ambient r="128" g="0" b="0" a="1" />
            <diffuse r="128" g="0" b="0" a="1" />
            <specular r="128" g="0" b="0" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="identity">
            <translate x="0" y="0" z="0"/>
        </transformation>

        <transformation id="set_leg0">
            <translate x="1.1" y="1" z="1.6"/>
            <scale x="0.2" y="2" z="0.2"/>
        </transformation>

        <transformation id="set_leg1">
            <translate x="4.9" y="1" z="1.6"/>
            <scale x="0.2" y="2" z="0.2"/>
        </transformation>

        <transformation id="set_leg2">
            <translate x="1.1" y="1" z="3.4"/>
            <scale x="0.2" y="2" z="0.2"/>
        </transformation>

        <transformation id="set_leg3">
            <translate x="4.9" y="1" z="3.4"/>
            <scale x="0.2" y="2" z="0.2"/>
        </transformation>

        <transformation id="set_table_top">
            <translate x="3" y="2" z="2.5"/>
            <scale x="4" y="0.4" z="2"/>
        </transformation>

        <transformation id="set_tv">
            <translate x="3" y="3.1" z="3"/>
        </transformation>

        <transformation id="set_tv_screen">
            <rotate axis="x" angle="90"/>
            <scale x="2.5" y="1.5" z="0.1"/>
        </transformation>

        <transformation id="set_tv_stand_arm">
            <translate x="0" y="-0.75" z="0"/>
            <rotate axis="x" angle="90"/>
            <scale x="0.5" y="0.25" z="0.09"/>
        </transformation>

        <transformation id="set_tv_stand_base">
            <translate x="0" y="-0.9" z="0"/>
            <rotate axis="x" angle="90"/>
            <scale x="1.5" y="0.1" z="0.5"/>
        </transformation>

        <transformation id="set_tv">
            <translate x="3" y="0.9" z="3"/>
        </transformation>

        <transformation id="set_ceiling_lamp">
            <translate x="4" y="2.9" z="4"/>
        </transformation>

        <transformation id="set_ceiling_lamp_shade">
            <translate x="0" y="0" z="0"/>
            <rotate axis="x" angle="-90"/>
            <scale x="0.5" y="0.5" z="0.5"/>
        </transformation>

        <transformation id="set_ceiling_lamp_wire">
            <translate x="0" y="0.5" z="0"/>
            <rotate axis="x" angle="-90"/>
            <scale x="0.05" y="0.5" z="0.05"/>
        </transformation>

        <transformation id="set_ceiling_lamp_base">
            <translate x="0" y="1.1" z="0"/>
            <rotate axis="x" angle="90"/>
            <scale x="0.25" y="0.1" z="0.25"/>
        </transformation>

        <transformation id="set_cube_face0">
            <translate x="0" y="0" z="0.5"/>
        </transformation>

        <transformation id="set_cube_face1">
            <translate x="0" y="-0.5" z="0"/>
            <rotate axis="x" angle="90"/>
        </transformation>

        <transformation id="set_cube_face2">
            <translate x="0" y="0" z="-0.5"/>
            <rotate axis="x" angle="180"/>
        </transformation>

        <transformation id="set_cube_face3">
            <translate x="0" y="0.5" z="0"/>
            <rotate axis="x" angle="-90"/>
        </transformation>

        <transformation id="set_cube_face4">
            <translate x="0.5" y="0" z="0"/>
            <rotate axis="y" angle="90"/>
        </transformation>

        <transformation id="set_cube_face5">
            <translate x="-0.5" y="0" z="0"/>
            <rotate axis="y" angle="-90"/>
        </transformation>

        <transformation id="set_side_wall">
            <translate x="2" y="2" z="0"/>
            <scale x="4" y="4" z="1"/>
        </transformation>

        <transformation id="set_back_wall">
            <translate x="0" y="2" z="2"/>
            <rotate axis="y" angle="90"/>
            <scale x="4" y="4" z="1"/>
        </transformation>
        
        <transformation id="set_ground">
            <translate x="2" y="0" z="2"/>
            <rotate axis="x" angle="-90"/>
            <scale x="4" y="4" z="1"/>
        </transformation>

    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="0.5" x2="0.5" y2="-0.5"/>
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0"
                      x2="1" y2="0" z2="0"
                      x3="0" y3="0" z3="1" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" slices="20" stacks="4" />
        </primitive>
        <primitive id="cone">
            <cylinder base="1" top="0.75" height="1" slices="20" stacks="4" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="3" slices="30" stacks="30" />
        </primitive>
        <primitive id="torus">
            <torus inner="2" outer="3" slices="15" loops="60" />
        </primitive>
    </primitives>

    <components>

        <component id="root">
            <transformation>
                <transformationref id="identity"/>
            </transformation>
            <materials>
                <material id="red"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="side_wall"/>
                <componentref id="back_wall"/>
                <componentref id="ground"/>
                <componentref id="tv"/>
                <componentref id="ceiling_lamp"/>
            </children>
        </component>

        <component id="table">
            <transformation>
                <transformationref id="identity"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="table_top"/>
                <componentref id="legs"/>
            </children>
        </component>

        <component id="table_top">
            <transformation>
                <transformationref id="set_table_top"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cube"/>
            </children>
        </component>

